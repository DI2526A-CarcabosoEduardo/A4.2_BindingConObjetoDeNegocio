<Window x:Class="A42_EduardoCarcaboso_BindingConObjetoNegocio.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:A42_EduardoCarcaboso_BindingConObjetoNegocio"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Window.Resources>
        <local:convertidor1 x:Key="HeroeColorConvertir"/>
        <local:convertidor2 x:Key="SiPerteneceGrupo"/>
    </Window.Resources>
    <Grid Background = "{Binding Heroe, Converter={StaticResource HeroeColorConvertir}}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>


        <StackPanel Grid.Row="0" Orientation="Horizontal" DataContext="{Binding SuperheroeSeleccionado}" Background = "{Binding Heroe, Converter={StaticResource HeroeColorConvertir}}">
            <TextBlock FontFamily="Impact" Foreground="White" FontSize="30" Margin="20,0,575,0" Text="{Binding Nombre, Mode=TwoWay}">
                <TextBlock.Effect>
                    <DropShadowEffect Color="Black"
                      BlurRadius="6"
                      ShadowDepth="2"
                      Opacity="0.8"/>
                </TextBlock.Effect>
            </TextBlock>
            <Image Source="/Assets/avengers.png" MaxWidth="30" Margin="1,0,1,0" Visibility="{Binding Vengador, Converter={StaticResource SiPerteneceGrupo}}"/>
            <Image Source="/Assets/xmen.png" MaxWidth="45" Margin="10,0,20,0" Visibility="{Binding Xmen, Converter={StaticResource SiPerteneceGrupo}}"/>
        </StackPanel>

        <WrapPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" >
            <Border BorderThickness="5" BorderBrush="Black" Margin="20,0,20,0">
                <Image Source="{Binding Imagen}" Stretch="Fill" StretchDirection="Both"/>
            </Border>
        </WrapPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" MouseLeftButtonUp="Anterior">
            <Button x:Name="FlechaIzquierda" Background="Transparent" BorderBrush="Transparent">
                <Image Source="/Assets/arrow.png" MaxWidth="30"/>
            </Button>
            <TextBlock FontFamily="Impact" Foreground="Black" FontSize="30" Text="{Binding DataContext.IndiceTexto, RelativeSource={RelativeSource AncestorType=Window}}"/>

            <Button x:Name="FlechaDerecha" Background="Transparent" BorderBrush="Transparent" MouseLeftButtonUp="Siguiente">
                <Image Source="/Assets/arrow.png" MaxWidth="30" RenderTransformOrigin="0.5,0.5">
                    <Image.RenderTransform>
                        <RotateTransform Angle="180"/>
                    </Image.RenderTransform>
                </Image>
            </Button>
        </StackPanel>
    </Grid>
</Window>
